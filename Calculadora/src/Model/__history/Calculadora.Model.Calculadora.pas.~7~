unit Calculadora.Model.Calculadora;

interface

uses
  Calculadora.Interfaces.Calculadora;

type
  TCalculadora = class(TInterfacedObject, iCalculadora)
    private
      FNumero1: Double;
      FNumero2: Double;
    public
      function Numero1(Numero: Double): iCalculadora; overload;
      function Numero2(Numero: Double): iCalculadora; overload;
      function Numero1: Double; overload;
      function Numero2: Double; overload;
      function Somar: Double;
      function Subtrair: Double;
      function Dividir: Double;
      function Multiplicar: Double;

      constructor Create;
      destructor Destroy; override;

      class function New: TCalculadora;
  end;
implementation

{ TCalculadora }

{ TCalculadora }

constructor TCalculadora.Create;
begin
  inherited;
end;

destructor TCalculadora.Destroy;
begin
  inherited;
end;

function TCalculadora.Somar: Double;
begin
  Result := FNumero1 + FNumero2;
end;

function TCalculadora.Subtrair: Double;
begin
  Result := FNumero1 - FNumero2;
end;

function TCalculadora.Dividir: Double;
begin
  Result := FNumero1 / FNumero2;
end;

function TCalculadora.Multiplicar: Double;
begin
  Result := FNumero1 * FNumero2;
end;

class function TCalculadora.New: TCalculadora;
begin
  Result := Self.Create;
end;

function TCalculadora.Numero1(Numero: Double): iCalculadora;
begin
  FNumero1 := Numero;
  Result := Self;
end;

function TCalculadora.Numero1: Double;
begin
  Result := FNumero1;
end;

function TCalculadora.Numero2: Double;
begin
  Result := FNumero2;
end;

function TCalculadora.Numero2(Numero: Double): iCalculadora;
begin
  FNumero2 := Numero;
  Result := Self;
end;

end.
